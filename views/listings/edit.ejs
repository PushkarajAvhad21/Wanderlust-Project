<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    
    <div class="col-8 offset-2 ">
    <h3>Edit The Listing</h3>
    <form method="post" action="/listings/<%= listing._id  %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
       
        <div class="ab-3">
            <label for="title" class="form-label" type="text" class="form-label">Title</Title></label>
            <input type="text" 
                name="listing[title]" 
                class="form-control" 
                value="<%= listing.title %>" 
                required>
                <div class="vaild-feedback">Title looks good!</div>
        </div>
        
        <br><br>
        <div class="ab-3">
            <label for="listing[description]" class="form-label" type="text" >Description</label>
            <textarea 
                name="listing[description]" 
                class="form-control"
                required>
                <%= listing.description %>
                </textarea>
                <div class="invalid-feedback">Please enter the description</div>
        </div>
         <br><br>

        <div class="mb-3">
            Original Listing Image <br>
            <img src="<%= originalImageUrl %>" alt="Listing Image">
        </div>
        <div class="ab-3">
            <label for="listing[image]" class="form-label" type="text" >Upload New Image</label>
            <input 
                type="file" 
                name="listing[image]" 
                class="form-control" 
            >
                   
        </div>
        <br><br>

        <div class="row">
            <div class="ab-3 col-md-4">
                <label for="listing[price]" class="form-label" type="text" >Price</label>
                <input 
                    type="number" 
                    name="listing[price]" 
                    class="form-control" 
                    value="<%= listing.price  %>"
                    required>
                    <div class="invalid-feedback">Price should be valid</div>
            </div>
            <br><br>
    
            <div class="ab-3 col-md-8">
                <label for="listing[country]" class="form-label">Country</label>
                <input 
                    type="text" 
                    name="listing[country]" 
                    class="form-control" 
                    value="<%= listing.country  %>"
                    required>
                    <div class="invalid-feedback">Country name should be valid</div>
           
            </div>
        </div>
        <br><br>
        
        <div class="ab-3">
            <label for="listing[location]" class="form-label" type="text" >Location</label>
            <input 
                type="text" 
                name="listing[location]" 
                class="form-control" 
                value="<%= listing.location %>"
                required>
                <div class="invalid-feedback">Location should be valid</div>
        </div>
        <br><br>
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
        <br><br><br><br>
    </form>
    </div>
</div>
