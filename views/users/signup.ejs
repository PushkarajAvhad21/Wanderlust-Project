<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h2 class="col-6 offset-3">SignUp on Wanderlust</h2>
    <br>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="ab-3">
                <label for="username" class="form-label" type="text" class="form-label">Username</Title></label>
                <input  
                    name="username" 
                    id="username" 
                    type="text" 
                    class="form-control"
                    required
                >
                <div class="valid-feedback">Looks good!</div>
            </div>
            <br>
            <div class="ab-3">
                <label for="email" class="form-label" type="text" class="form-label">Email</Title></label>
                <input  
                    name="email" 
                    id="email" 
                    type="text" 
                    class="form-control"
                    required
                >
            </div>
            <br>
            <div class="ab-3">
                <label for="password" class="form-label" type="text" class="form-label">Password</Title></label>
                <input  
                    name="password" 
                    id="password" 
                    type="password" 
                    class="form-control"
                    required
                >
            </div>
            <br><br>
            <button class="btn btn-success">SignUp</button>
            <br><br>              
        </form>
    
    </div>
</div>